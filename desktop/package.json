{
  "name": "nalamdesk-desktop",
  "version": "0.0.6",
  "author": "Sankara Sabapathy <sankara.sabapathy@gmail.com>",
  "description": "NalamDesk - Medical Practice Management",
  "license": "AGPL-3.0-only",
  "homepage": "https://github.com/sankara-sabapathy/nalamdesk",
  "productName": "NalamDesk",
  "main": "dist/main/main.js",
  "scripts": {
    "ng": "ng",
    "dev": "npm start",
    "start": "npm run build:css && concurrently \"npm run watch:css\" \"npm run start:renderer\" \"wait-on http://localhost:4200 && npm run start:electron\"",
    "start:renderer": "ng serve --open=false",
    "start:electron": "tsc -p tsconfig.main.json && electron dist/main/main.js",
    "watch:css": "tailwindcss -i src/tailwind.css -o src/styles.css --watch",
    "build:main": "tsc -p tsconfig.main.json",
    "build:css": "tailwindcss -i src/tailwind.css -o src/styles.css",
    "build": "npm run build:css && ng build --base-href ./ && npm run build:main",
    "pack": "npm run build && electron-builder",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:main && npm run test:renderer",
    "test:main": "vitest run -c vitest.config.main.js",
    "test:renderer": "vitest run -c vitest.config.renderer.mjs",
    "e2e": "playwright test",
    "postinstall": "electron-builder install-app-deps",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac",
    "build:server": "tsc -p tsconfig.server.json",
    "start:server": "npm run build:server && node dist/server/index.js"
  },
  "private": true,
  "build": {
    "appId": "com.sankarasabapathy.nalamdesk",
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "sankara-sabapathy",
        "repo": "nalamdesk"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.png",
      "forceCodeSigning": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Office",
      "maintainer": "Sankara Sabapathy <sankara.sabapathy@gmail.com>"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.medical"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^9.0.0",
    "@types/pdfmake": "^0.2.12",
    "ag-grid-angular": "32.3.3",
    "ag-grid-community": "32.3.3",
    "argon2": "^0.44.0",
    "better-sqlite3-multiple-ciphers": "^12.6.2",
    "cron": "^4.4.0",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "fastify": "^5.7.1",
    "fs-extra": "^11.3.3",
    "googleapis": "^170.1.0",
    "jsonwebtoken": "^9.0.3",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "open": "^11.0.0",
    "pdfmake": "^0.3.3",
    "rxjs": "~7.8.0",
    "sharp": "^0.34.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.3",
    "@angular-devkit/build-angular": "^17.0.8",
    "@angular/cli": "^17.0.8",
    "@angular/compiler-cli": "^17.0.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@vitest/ui": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "daisyui": "^4.12.24",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.2.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}